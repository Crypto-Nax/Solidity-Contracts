interface IRewardPool {
    function getEtherAmount(uint256 collectionNumber) external view returns(uint256);
    function claimReward(uint weiAmount, address to) external returns(bool paid);
}

contract ARP is IRewardPool, AccessControl {
    bytes32 public constant ADMIN_ROLE = keccak256("ADMIN_ROLE");
    bytes32 public constant NODE_ROLE = keccak256("NODE_ROLE");

    using LowGasSafeMath for uint;
    using LowGasSafeMath for uint32;

    uint256[] public mintCostUSD;
    address usdc;
    IUniswapV2Pair pair;
    IUniswapV2Router02 router;
    IUniswapV2Factory factory;

    constructor(address _node) {
        router = IUniswapV2Router02(0x7a250d5630B4cF539739dF2C5dAcb4c659F2488D);
        _setRoleAdmin(ADMIN_ROLE, DEFAULT_ADMIN_ROLE);
        _setRoleAdmin(NODE_ROLE, ADMIN_ROLE);
        _grantRole(NODE_ROLE, _node);
        _grantRole(ADMIN_ROLE, _msgSender());        
        _grantRole(DEFAULT_ADMIN_ROLE, _msgSender());
    }
    
    receive() external payable {

  	}

    function setUSDC(address _usdc, uint[] memory mintCost, bool reset) external onlyRole(ADMIN_ROLE) {
        if(reset){
            require(mintCost.length >= mintCostUSD.length);
            mintCostUSD = mintCost;
        } else {
            mintCostUSD.push(mintCost[0]);
        }   
        usdc = _usdc;
        factory = IUniswapV2Factory(router.factory());
        pair = IUniswapV2Pair(factory.getPair(usdc, router.WETH()));
    }

    function getEtherAmount(uint256 collectionNumber) external override view returns(uint256) {
        (uint256 r0, uint256 r1, ) = pair.getReserves();
        uint ethAmount = router.getAmountOut(mintCostUSD[collectionNumber], r0, r1);
        return ethAmount;
    }

    function claimReward(uint weiAmount, address to) external override onlyRole(NODE_ROLE) returns(bool paid){
        (paid, ) = payable(to).call{value:weiAmount, gas:30000}("");
        require(paid);
    }
}
